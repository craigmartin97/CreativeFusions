@model RegisterViewModel

<link href="~/css/auth.css" rel="stylesheet" />

@{
    ViewData["Title"] = "Register";
}

<section class="h-100">
    <div class="container h-100">
        <div class="row justify-content-md-center h-100">
            <div class="card-wrapper">
                <div class="brand text-center" style="max-height: 21%!important">
                    <img src="@Url.Content("~/img/CreativeFusionsLogo.png")" alt="logo">
                </div>
                <div class="card fat">
                    <div class="card-body">
                        <h4 class="card-title">Register</h4>
                        <form asp-controller="Auth" asp-action="Register" method="post">

                            <!-- Hidden ReturnUrl address -->
                            <input type="hidden" asp-for="ReturnUrl" />

                            <!-- Name -->
                            <div class="form-group">
                                <label for="name">Full Name</label>
                                <input id="name" type="text" name="name" class="form-control" asp-for="FullName" autofocus>
                            </div>

                            <!-- Phone Number -->
                            <div class="form-group">
                                <label for="name">Phone Number</label>
                                <input id="name" type="text" name="name" class="form-control" asp-for="PhoneNumber">
                            </div>

                            <!-- Email -->
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input id="email" name="email" type="email" class="form-control" asp-for="Email">
                            </div>

                            <!-- Password -->
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input id="password" type="password" name="password" class="form-control" asp-for="Password" data-eye>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">
                                    Register
                                </button>
                            </div>

                            <div class="mt-4 text-center">
                                Already have an account? <a asp-controller="Auth" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

